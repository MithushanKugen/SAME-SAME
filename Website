                <div class="md:w-1/2">
                    <form onsubmit="redirectToOpenTable(event)" class="bg-white rounded-lg shadow-lg p-8 text-gray-800">
                        <script>
  function redirectToOpenTable(event) {
    event.preventDefault();

    const guests = document.getElementById('guests').value || 2;
    const date = document.getElementById('date').value;
    const time = document.getElementById('time').value;

    if (!date || !time) {
      alert("Please select a date and time.");
      return;
    }

    // Format datetime into ISO string: YYYY-MM-DDTHH:MM
    const dateTime = `${date}T${time}`;

    // Construct OpenTable URL
    const url = `https://www.opentable.ca/booking/restref/availability?rid=1425814&lang=en-CA&color=1&r3uid=cfe&dark=false&correlationId=91d4c096-1683-4eb2-b57d-286adb3041b2&restRef=1425814&partySize=${guests}&dateTime=${encodeURIComponent(dateTime)}&otSource=Restaurant%20website`;

    // Redirect to OpenTable
    window.open(url, "_blank");
  }
</script>
                        <h3 class="text-2xl font-bold mb-6 text-gray-800">Book Your Table</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
